<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'/>
        <meta http-equiv="X-UA-Compatible" content="IE=Edge"> <!-- Disable IE Compatibility Mode !-->
        <meta name="format-detection" content="telephone=no">
        <meta name="apple-mobile-web-app-capable" content="yes" >

        <title>@ViewBag.Title</title>
        @RenderSection("BasicCSS", true)        
        
        <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.custom.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/ProductionTimer.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/Const.js")" type="text/javascript"></script>
              <script type="text/javascript">

                  $(window).bind(ProductionTimer.resizeEvent(), function (e) { ProductionTimer.onResize(e); });
                  $(window).bind("hashchange", function (e) { ProductionTimer.onHashChange(); });
                  $(window).bind("touchmove", function (e) { e.preventDefault(); });
                  $(document).ready(function () {
                       if('ontouchstart' in document.documentElement) {
                           $("#main_container").addClass("prevent_scrolling");
                       }
                      ProductionTimer.startUp();
                  });

                </script>
    </head>

    <body>
        <div id="main_container" class="main_container">
            @RenderBody()
        </div>
        
        <div class="footer_container">
            @RenderSection("Footer", true)
        </div>
        @*<div id="popup" class="popup_box" style="display:none; opacity:0;">
            @RenderSection("PopUp", true)
        </div>*@
        @RenderSection("HomeScript", true)
        @RenderSection("OptionsScript", true)

        <div id="loadingBarContent" class="loadingBarContent" style="">
        
            <div id="loadingBar" class="loadingBar">	
            Loading...
            </div>	
        </div>

        <div id="warningBarContent" class="warningBarContent" style="display: none">
        </div>
    </body>
</html>